@model WebShop_S2.Models.AccountViewModel

@{
    ViewData["Title"] = "Profile";
}

<div id="ProfileInfo" class="col-md-3 profile-box" style="border:outset;width:100%;margin-bottom:50px;margin-top:20px">
    <div class="profile-box-content">
        <img style="float:left;margin:5%;border:dashed;margin-right:5px" alt="/images/NoIMG.png" src="~/images/NoIMG.png" class="img img-responsive profile-image">
        <h2 style="float:left;margin:5%"" class="no-margin-bottom">@Model.Username</h2>
        @*@*<p style="float:left"><a href="#">Edit profile</a></p>*@
        <p style="float:right;margin:5%;text-align:center"><span class="glyphicon glyphicon-calendar one"></span>@Model.Birthday.ToShortDateString()</p>
        <p style="float:right;margin:5%;text-align:center"><span class="glyphicon glyphicon-envelope one"></span>@Model.Email</p>
    </div>

</div>

<div class="profile-box-content" >
    <table id="TableHeader" class="table table-striped table-bordered">
        <thead>
            <tr>
                <td>Order</td>
                <td>Price</td>
                <td>Status</td>
            </tr>
        </thead>
        <tbody>
            @if (Model.Orders.Count == 0)
            {
                <tr class="">
                    <td>No Orders</td>
                    <td></td>
                    <td></td>
                </tr>
            }
            else
            {
                foreach (var item in Model.Orders)
                {
                    <tr class="">
                        <td>#Order</td>
                        <td></td>
                        <td>#Status</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

<div class="profile-box-content" >
    <table id="TableHeader" class="table table-striped table-bordered">
        <thead>
            <tr>
                <td>Review</td>
                <td>Description</td>
                <td>Score</td>
            </tr>
        </thead>
        <tbody>
            @if (Model.Reviews.Count == 0)
            {
                <tr class="">
                    <td>No Reviews</td>
                    <td></td>
                    <td></td>
                </tr>
            }
            else
            {
                foreach (var item in Model.Orders)
                {
                    <tr class="">
                        <td>#Order</td>
                        <td></td>
                        <td>#Status</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

